<div class="container-fluid h-100">
  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Categories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="#">Expenses</a>
          </li>

          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Budget</a>
          </li>

          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Logout</a>
          </li>

        </ul>
        <form class="">
        </form>
      </div>
      <a class="navbar-brand" href="/">
        <h3>App Logo</h3>
      </a>
    </div>
  </nav>
  <h1 style="text-align: center;">Categories Index</h1>
  <div class="mx-2 h-80" style="width: auto">
    <ul class="list-unstyled" style="width: 100%;">
      <% @categories.each do |category| %>
        <li style="display: flex; justify-content: space-between;">
          <% if category.icon.nil? %>
            <%= link_to image_tag('icons/default_logo.png', style: 'width: 32px; height: 32px;', class: 'icon'), user_categories_path(current_user) %>
          <% else %>
            <%= link_to image_tag(category.icon, style: 'width: 32px; height: 32px;', class: 'icon'), user_categories_path(current_user) %>
          <% end %>
          <span class="h4 link-underline-opacity-0"><%= link_to category.name,
            user_category_path(current_user, category) %></span>
          <span><%= button_to "X", class:"del-btn" %></span>
        </li>
      <% end %>
    </ul>
  </div>
  <p style="mr-3">
    <strong>
      <%= link_to "New category", new_user_category_path(current_user), class: "btn btn-primary",
        style: "width: 100%" %>
    </strong>
  </p>
</div>
