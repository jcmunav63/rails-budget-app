<div class="container-fluid h-100">
  <%= render partial: 'shared/navbar' %>
  <%= render partial: 'shared/back_button' %>
  <h3 class="fw-bold" style="text-align: center; font-family: proxima-nova, sans-serif;">
    Expenses for: <%= @category.name %></h3>
  <h4 class="fw-bold" style="text-align: left; font-family: proxima-nova, sans-serif; margin-bottom: 15px;">
    Total Expenses: <%= number_to_currency(@category.total_expenses, precision: 2)%></h4>
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% @expenses.each do |expense| %>
          <tr>
            <td><%= expense.name %></td>
            <td><%= number_to_currency(expense.amount, precision: 2) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if can? :create, Expense %>
      <%= link_to "Add Expense", new_user_category_expense_path(current_user, @category), class: "btn btn-primary",
      style: "width: 100%; margin-top: 90px;" %>
    <% end %>
  </div>
</div>
